    <body>
        <div class="container">
            <form class="form" action="/users" method="POST">
                <legend>Create User</legend>
                <input class="form-input" type="text" name="name" id="name" placeholder="Enter Name">
                <input class="form-input" type="email" name="email" id="email" placeholder="Enter Email">
                <input class="form-input" type="number" name="age" id="age" placeholder="Enter Age">
                <input class="btn form-btn" type="submit" value="Add User">
            </form>

        </div>
    </body>
